    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceFolder}",
            "executable": "${command:cmake.launchTargetPath}",
            "device": "RP2040",
            "request": "launch",
            "type": "cortex-debug",
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "runToEntryPoint": "main",
            "svdFile": "C:/Program Files (x86)/pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
            "servertype": "openocd",
            "serverArgs": ["-c adapter speed 5000"],
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/rp2040.cfg"
            ],
            "searchDir": ["C:/Program Files (x86)/openocd/scripts"]
        }
    ]
}